---
import "../styles/global.css";
---
<!-- Header/Navigation -->
<header class="bg-white sticky top-0 z-50 shadow-md">
	<div class="container mx-auto px-4 py-4 flex justify-between items-center">
		<a href="#" class="flex items-center space-x-2">
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-cloud-cog text-blue-500">
				<path d="M12 21a5 5 0 1 0 0-10 5 5 0 0 0 0 10Z"></path>
				<circle cx="12" cy="12" r="3"></circle>
				<path d="M12 7.5V6"></path>
				<path d="M12 16.5V18"></path>
				<path d="m14.2 9.8-.7-.7"></path>
				<path d="m9.8 14.2.7.7"></path>
				<path d="m14.2 14.2-.7.7"></path>
				<path d="m9.8 9.8.7.7"></path>
				<path d="M16 21H5a4 4 0 0 1-3.65-5.62C2.7 14.88 3.5 13.5 4.5 13a5 5 0 0 1 10.14-.88 7 7 0 0 0 4.19-2.28 4.5 4.5 0 0 1 2.3 3.65c.01.2.02.4.02.6V21h-2"></path>
			</svg>
			<span class="text-xl font-bold text-gray-800">Carrier Cloud Consulting</span>
		</a>
		<nav class="hidden md:flex space-x-6">
			<a href="#home" class="text-gray-600 hover:text-blue-500 transition duration-300">Home</a>
			<a href="#services" class="text-gray-600 hover:text-blue-500 transition duration-300">Services</a>
			<a href="#about" class="text-gray-600 hover:text-blue-500 transition duration-300">About Us</a>
			<a href="#contact" class="text-gray-600 hover:text-blue-500 transition duration-300">Contact</a>
		</nav>
		<div class="md:hidden">
			<!-- Mobile menu button -->
			<button id="mobile-menu-button" class="text-gray-600 focus:outline-none">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-menu">
					<line x1="4" x2="20" y1="12" y2="12"></line>
					<line x1="4" x2="20" y1="6" y2="6"></line>
					<line x1="4" x2="20" y1="18" y2="18"></line>
				</svg>
			</button>
		</div>
	</div>
	<!-- Mobile menu -->
	<div id="mobile-menu" class="hidden md:hidden bg-white shadow-lg">
		<nav class="flex flex-col p-4 space-y-2">
			<a href="#home" class="text-gray-800 hover:bg-gray-100 p-2 rounded-md transition duration-300">Home</a>
			<a href="#services" class="text-gray-800 hover:bg-gray-100 p-2 rounded-md transition duration-300">Services</a>
			<a href="#about" class="text-gray-800 hover:bg-gray-100 p-2 rounded-md transition duration-300">About Us</a>
			<a href="#contact" class="text-gray-800 hover:bg-gray-100 p-2 rounded-md transition duration-300">Contact</a>
		</nav>
	</div>
</header>

